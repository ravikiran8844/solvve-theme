<div class="container">
  <div class="row">
{% assign current_variant = product.selected_or_first_available_variant %}

<div class="col-md-7 col-sm-12">
        {% assign current_variant = product.selected_or_first_available_variant %}

<div id="product__slider">
      <div class="slider-galeria-thumbs">
        {% for image in product.images %}
        <div class="slide"><img loading="lazy" src="{{ image.src | image_url: width: 100, height: 100 }}" alt="{{ image.alt | escape }}" class="img-responsive rds"></div>
        {% endfor %}
      </div>
      <div class="slider-galeria">
        {% for image in product.images %}
        <div class="slide"><img src="{{ image.src | image_url: width: 480, height: 480 }}" alt="{{ image.alt | escape }}" class="img-responsive"></div>
        {% endfor %}
      </div>
    </div>
      </div>
    <div class="col-md-5 col-sm-12">
    <h1 class="product-title text-center">{{ product.title }}</h1>
      <ul class="rev-star">
        <li><i class="fa fa-star" aria-hidden="true"></i></li>
        <li><i class="fa fa-star" aria-hidden="true"></i></li>
        <li><i class="fa fa-star" aria-hidden="true"></i></li>
        <li><i class="fa fa-star" aria-hidden="true"></i></li>
        <li><i class="fa fa-star-o" aria-hidden="true"></i></li> 
        <li class="rev-count">174+ reviews</li>
      </ul>
      <div class="product-description text-center">
        <p>{{ product.description }}</p>
      </div>
      <div class="product-price-box text-center">ebook: <span class="selling-price">{{ current_variant.price | money }}</span> <del>{{ current_variant.compare_at_price | money }}</del> <span class="incl-txt">(Incl. of all taxes)</span></div>
<form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
 <div class="var-qty">
  <select name="id" id="productSelect">
    {% for variant in product.variants %}
      {% if variant.available %}
        <option value="{{ variant.id }}">
          {{ variant.title }} 
        </option>
      {% else %}  
        <option disabled="disabled">
          {{ variant.title }} - sold out
        </option>
      {% endif %}
    {% endfor %}
  </select>
   <div class="quantity-control" data-quantity="">
    <span class="quantity-btn" data-quantity-minus=""><svg viewBox="0 0 409.6 409.6">
        <g>
