<div class="container">
  <div class="row g-0">
    <div
      class="col-12">
      <div class="ds-main-heading fs-2 py-5">
        {{ section.settings.heading }}
      </div>
    </div>
    <div class="col-12 ds-items-wrapper">
      {% for block in section.blocks %}
        <div class="col-12 col-sm-6 col-lg-4 card ds-item me-3">
          <img
            loading="lazy"
            class="card-img-top"
            src="{{ block.settings.image | image_url }}"
            alt="Card image cap">
          <div class="card-body">
            <p class="card-text">{{ block.settings.content }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  $('.ds-items-wrapper').slick({
    slidesToShow: 3,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 2000,
    dots: false,
    responsive: [
      {
        breakpoint: 768,
        settings: {
          arrows: false,

          slidesToShow: 3
        }
      }, {
        breakpoint: 767,
        settings: {
          arrows: false,
          slidesToShow: 2
        }
      }, {
        breakpoint: 560,
        settings: {
          arrows: false,
          slidesToShow: 1
        }
      }
    ]
  });
</script>
<style>
  .ds-main-heading {
    font-family: 'Inter-Bold';
    font-style: normal;
    font-weight: 700;
    line-height: 137.52%;
    text-align: center;
    color: #550863;
  }
  .card-body {
    background: #FF7C99;
    border-bottom-left-radius: 18px;
    border-bottom-right-radius: 18px;


  }
  .ds-item {
    font-family: 'Inter-Light';
    font-style: normal;
    font-weight: 400;
    font-size: 15px;
    line-height: 132.5%;
    color: #FFFFFF;
  }
  .card {
    border: none !important;
    background-color: transparent;
  }
  .ds-item b,
  .ds-item strong {
    font-family: 'Inter-Bold';
    font-weight: 700;
    font-size: 18px;
    line-height: 142.52%;
  }
</style>


{% schema %}
  {
    "name": "Doctors Section",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Recommended By Leading Doctors"
      }
    ],
    "blocks": [
      {
        "name": "Block",
        "type": "doctor-block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "richtext",
            "id": "content",
            "label": "Content",
            "default": "<p>Content</p>"
          }
        ]
      }
    ]
  }
{% endschema %}