  <div class="container">
    <h3 class="title text-center">{{ section.settings.title }}</h3>
    <div class="row">
      <div class="glide" id="what_solvee">
        <div class="glide__track" data-glide-el="track">
          <div class="glide__slides">
            {%- for block in section.blocks -%}
              <div class="glide__slide">
                <div class="icon-box">
                  <img class="icon" src="{{ block.settings.icon|img_url: "master" }}" alt="{{ block.settings.icon.alt|default: shop.name | escape }}">
                  <h5 class="icon-title">{{ block.settings.icon_title }}</h5>
                  <p class="icon-content">{{ block.settings.icon_content }}</p>
                </div>
              </div>
            {%- endfor -%}
          </div>
        </div>
        <div data-glide-el="controls">
    <button class="slider__arrow slider__arrow--prev glide__arrow glide__arrow--prev" data-glide-dir="<">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
        <path d="M0 12l10.975 11 2.848-2.828-6.176-6.176H24v-3.992H7.646l6.176-6.176L10.975 1 0 12z"></path>
      </svg>
    </button>

    <button class="slider__arrow slider__arrow--next glide__arrow glide__arrow--next" data-glide-dir=">">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
        <path d="M13.025 1l-2.847 2.828 6.176 6.176h-16.354v3.992h16.354l-6.176 6.176 2.847 2.828 10.975-11z"></path>
      </svg>
    </button>
</div>
      </div>
      
    </div>
  </div>
  <script>
    new Glide('#what_solvee', {
	type: 'carousel',
	perView: 3,
    autoplay:5000,
	breakpoints: {
		860: {
			perView: 2
		},
      560: {
			perView: 1,
        arrows: {
          prev: ".glide__arrow--prev",
          next: ".glide__arrow--next"
        }
		},
	}
}).mount();
</script>

{% schema %}
  {
    "name": "What Is Solvve",
    "class":"home_section_four",
    "settings": [
      {
        "type":"text",
        "id":"title",
        "label":"Title"
      }
    ],
    "blocks":[
      {
       "name":"Icon box",
        "type":"icon-box",
        "settings":[ 
          {
            "type":"image_picker",
            "id":"icon",
            "label":"Icon"
          },
          {
            "type":"text",
            "id":"icon_title",
            "label":"Icon Title"
          },
          {
            "type":"text",
            "id":"icon_content",
            "label":"Icon Content"
          }
        ]
      }
    ]
  }
{% endschema %}
