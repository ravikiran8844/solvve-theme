    <div class="container py-5">
      <h1 class="mb-4">My Collection</h1>
      <div class="row">
        {% for product in collection.products limit:2 %}
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
          <div class="card">
            <a href="{{ product.url }}">
              <img loading="eager" class="pr-image" width="540" height="540" src="{{ product.featured_image | img_url: 'large' }}" class="card-img-top" alt="{{ product.title }}">
            </a>
            <div class="card-body">
              <h5 class="card-title">{{ product.title }}</h5>
              <a href="{{ product.url }}" class="btn btn-primary">View product</a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>

    <style>
      .pr-image{
        width:100%;
        height:auto;
      }
    </style>