<!-- /templates/customers/account.liquid -->

<div clas="account_section">
  <div class="container">
    <div class="row text-center pt-5 pb-5">
      <h2>
        My Account</h2>
    </div>
    <div class="row">
      <div class="col-md-8">
        <div id="customer_orders">
          <h2>Orders</h2>
          {% paginate customer.orders by 10 %}
            {% if customer.orders.size != 0 %}
              {% for order in customer.orders %}
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Order Number
                      </th>
                      <th scope="col">Date
                      </th>
                      <th scope="col">Payment Status
                      </th>
                      <th scope="col">Fulfillment Status
                      </th>
                      <th scope="col">Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for order in customer.orders %}
                      <tr>
                        <td>{{ order.name | link_to: order.customer_url }}</td>
                        <td>{{ order.created_at | date: "%a, %b %d, %y" }}</td>
                        <td>{{ order.financial_status_label }}</td>
                        <td>{{ order.fulfillment_status_label }}</td>
                        <td>{{ order.total_price | money }}</td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              {% endfor %}
            {% else %}
              <p>You haven't placed any orders yet.</p>
            {% endif %}
            {{ paginate | default_pagination }}
          {% endpaginate %}
        </div>
      </div>
      <div class="col-md-4">
        {% if customer.default_address %}
          <h2>Address</h2>
          <div class="card mb-5 p-4">
            <p>{{ customer.default_address.address1 }}</p>
            {% if customer.default_address.address2 != "" %}
              <p>{{ customer.default_address.address2 }}</p>
            {% endif %}
            <p>{{ customer.default_address.city }},
              {% if address.province_code %}
                {{ customer.default_address.province_code }},
              {% endif %}
              {{ customer.default_address.country }}</p>
            <p>{{ customer.default_address.zip }}</p>
            <p>{{ customer.default_address.phone }}</p>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="row mt-3 mb-5 text-end">
      <a href="/account/logout">
        <button class="btn btn-dark">Log Out</button>
      </a>
    </div>
  </div>
</div>